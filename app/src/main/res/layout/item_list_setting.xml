<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_marginBottom="5dp"
    android:paddingHorizontal="@dimen/cardview_default_radius"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:elevation="2dp"
    android:background="@drawable/res"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageItemSetting"
        android:layout_marginRight="20dp"
        android:layout_width="30dp"
        android:layout_height="50dp"></ImageView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="280dp"
        android:layout_marginRight="3dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtSetting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:freezesText="true"
            android:textColor="@color/design_default_color_on_secondary"
            android:text="List"
            android:textSize="18sp"
            app:drawableTint="#AF6969"></TextView>
        <TextView
            android:id="@+id/txtSettingDetails"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:freezesText="true"
            android:textColor="#2F4F4F"
            android:textSize="14sp"
            app:drawableTint="#AF6969"></TextView>
    </LinearLayout>
    <ImageView
        android:layout_marginTop="13dp"
        android:id="@+id/image01"
        android:layout_width="30dp"
        android:layout_height="30dp"></ImageView>

</LinearLayout>